<!-- res/values/styles.xml -->

<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom theme without the app bar -->
    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Group Name</item>
        <item name="android:background">@drawable/edit_text_background</item> <!-- Set a custom background drawable -->
        <item name="android:textColor">#000000</item> <!-- Text color (black) -->
        <item name="android:padding">8dp</item> <!-- Padding between text and border -->
        <item name="android:inputType">text</item> <!-- Input type for single-line text -->
    </style>
    <style name="AlertDialogButtons">
        <color name="colorPrimary">#0000FF</color> <!-- Text color for buttons -->
        <item name="android:background">@color/white</item> <!-- Background color (white) -->
    </style>

</resources>